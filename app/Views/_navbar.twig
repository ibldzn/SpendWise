<header class="bg-[#638c6d] flex items-center justify-between whitespace-nowrap px-10 py-4 text-[#E7FBB4]">
  <a href="{{ app_url }}" class="flex items-center gap-4">
    <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">SpendWise</h2>
  </a>
  <div class="flex flex-1 justify-end gap-8">
    <div class="flex items-center gap-9">
      <a class="text-sm font-medium leading-normal hover:underline focus:outline-none focus:text-gray-700 focus:border-gray-300 transition duration-150 ease-in-out" href="{{ app_url }}/about">About</a>
      <a class="text-sm font-medium leading-normal hover:underline focus:outline-none focus:text-gray-700 focus:border-gray-300 transition duration-150 ease-in-out" href="{{ app_url }}/contact">Contact</a>
      {% if logged_in %}
        <a class="text-sm font-medium leading-normal hover:underline focus:outline-none focus:text-gray-700 focus:border-gray-300 transition duration-150 ease-in-out" href="{{ app_url }}/dashboard">Dashboard</a>
      {% else %}
        <a class="text-sm font-medium leading-normal hover:underline focus:outline-none focus:text-gray-700 focus:border-gray-300 transition duration-150 ease-in-out" href="{{ app_url }}/login">Login</a>
        <a class="text-sm font-medium leading-normal hover:underline focus:outline-none focus:text-gray-700 focus:border-gray-300 transition duration-150 ease-in-out" href="{{ app_url }}/register">Register</a>
      {% endif %}
    </div>
  </div>
</header>
