{% extends "_base.twig" %}

{% block head %}
<script src="https://kit.fontawesome.com/ce1c04a23c.js" crossorigin="anonymous"></script>
<title>SpendWise | Profile</title>
{% endblock %}

{% block main %}
<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row gap-4">
    <aside class="flex flex-col gap-2 bg-[#E7FBB4] w-full md:w-72 p-4 rounded-md text-[#638C6D]">
      <h1 class="text-4xl font-bold mb-4">Profile</h1>
      <hr class="w-full mb-4 border-b border-[#638C6D]" />
      <div class="flex items-center gap-2 text-lg p-2 transition rounded-sm hover:bg-[#638C6D] hover:text-[#E7FBB4] hover:cursor-pointer">
        <i class="fas fa-user"></i>
        <a href="{{ app_url }}/profile/account">Account</a>
      </div>
      <div class="flex items-center gap-2 text-lg p-2 transition rounded-sm hover:bg-[#638C6D] hover:text-[#E7FBB4] hover:cursor-pointer">
        <i class="fas fa-list"></i>
        <a href="{{ app_url }}/profile/categories">Categories</a>
      </div>
      <div class="flex items-center gap-2 text-lg p-2 transition rounded-sm hover:bg-[#638C6D] hover:text-[#E7FBB4] hover:cursor-pointer">
        <i class="fas fa-money-bill-wave"></i>
        <a href="{{ app_url }}/profile/expenses">Expenses</a>
      </div>
    </aside>
    <div class="w-full h-fit bg-[#6A9C89] text-[#fefefe] p-4 rounded-md">
      {% block content %}{% endblock %}
    </div>
  </div>
</div>
{% endblock %}

