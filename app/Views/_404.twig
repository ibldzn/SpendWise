{% extends "_base.twig" %}

{% block head %}
<title>SpendWise | Not found</title>
{% endblock %}

{% block main %}
<div class="container mx-auto flex flex-col w-full h-full justify-center items-center mt-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="flex flex-col justify-center items-center">
      <h1 class="text-center text-4xl font-bold text-[#fefefe]">
        404 | Page Not Found
      </h1>
      <p class="text-lg text-gray-200 mt-4">The page you are looking for does not exist.</p>
      <a href="{{ app_url }}" class="bg-[#1AC468] rounded-md p-2 mt-4 transition hover:scale-105 ease-out">Go Home</a>
    </div>
    <div class="flex justify-center items-center">
      <img src="{{ app_url }}/assets/browser-window.png" alt="Browser Window" class="ml-12" />
    </div>
  </div>
</div>
{% endblock %}
